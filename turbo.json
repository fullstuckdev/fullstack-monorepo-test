{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["NODE_ENV", "IS_EMULATOR", "PROJECT"],
    "globalDependencies": [".env"],
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**"]
      },
      "dev": {
        "cache": false,
        "persistent": true,
        "dependsOn": ["^build"]
      },
      "serve": {
        "cache": false,
        "persistent": true,
        "dependsOn": ["build"]
      },
      "test": {
        "dependsOn": ["^build"],
        "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
      },
      "lint": {
        "outputs": []
      },
      "clean": {
        "cache": false
      }
    }
}